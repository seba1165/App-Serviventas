<!--Vista de la tabla log-->
<head>
<%= render 'shared/navbarAdmin' %>
<%= yield %>
</head>

<body>
<div class="container">
    <h1 style="color:#0B2161"><FONT FACE="times new roman">REGISTRO <small>   Seleccione el registro que desea modificar y elija una opción</small></FONT></h1>
    <hr>
    <p></p>  
    <div class="row">
        <div class="panel panel-primary filterable">
            <div class="panel-heading" style="min-height:40px;">
                <h3 class="panel-title pull-left">REGISTRO</h3>
                <div class="pull-right">
                    <button href="javascript:;" class="btn btn-default btn-xs btn-filter"><span class="glyphicon glyphicon-filter"></span> Filtrar</button>
                </div>
            </div>
            <table class="table"> <!-- Arreglar tabla y conectarlo con la bd-->
                <thead>
                    <tr class="filters">
                        <th><input type="text" class="form-control" placeholder="Fecha de Modificación" disabled></th>
                        <th><input type="text" class="form-control" placeholder="Nombre Usuario" disabled></th>
                        <th><input type="text" class="form-control" placeholder="Tabla" disabled></th>
                        <th><input type="text" class="form-control" placeholder="Operación" disabled></th>
                        <th><input type="text" class="form-control" placeholder="Dato antiguo" disabled></th>
                        <th><input type="text" class="form-control" placeholder="Dato nuevo" disabled></th>
                        <th>Eliminar</th>
                    </tr>
                </thead>
                <tbody style="text-align: center">
                    <% @logs.each do |d| %>
                        <tr>
                            <td><%= d.UpdateDate %></td>
                            <td><%= d.UserName %></td>
                            <td><%= d.TableName %></td>
                            <td><%= d.Operation %></td>
                            <td><%= d.OldValue %></td>
                            <td><%= d.NewValue %></td>
                            <td></td>
                            <td class="td-actions">
                                <button type: "submit" class="btn btn-default btn-xs" style="color:#FFFFFF; background-color:#FE2E2E;" onclick="location.href='#';"><span class="glyphicon glyphicon-remove"></span></button>
                                <!--Antes habias echo este codigo en eliminar usuario
                                    <%= button_to , elimUsr_path(d.emp_rut), .... etc %>
                                    no escribi en este comentario el nombre del boton y el metodo pq no se comentaban xd
                                -->
                            </td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
    <hr>
</div>
</body>

<div>
  <%= render 'shared/footer' %>
  <%= yield %>
</div>