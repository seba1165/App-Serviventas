<% flash.each do |key, value| %>
    <p> <%= value %> </p>
<% end %>
<head>
  <div class="container">
    <h1 style="color:#0B2161"><FONT FACE="times new roman">AGREGAR INSTALACIONES A LA COTIZACIÓN </FONT>
      <button type: "submit" class="btn btn-default pull-right" style="color:#FFFFFF; background-color:#31B404;" onclick="location.href='/cart';"><span class="glyphicon glyphicon-eye-open"></span> Vista previa</button>
      <br><hr>

    </h1>

  </div>
</head>
<body>
<div class="container">
  <div class="row">
    <div class="panel panel-primary filterable">
      <div class="panel-heading" style="min-height:40px;">
        <h3 class="panel-title pull-left">Servicios de Intalación</h3>
        <div class="pull-right">
          <button href="javascript:;" class="btn btn-default btn-xs btn-filter"><span class="glyphicon glyphicon-filter"></span> Filtrar</button>
        </div>
      </div>
      <table class="table">
        <thead>
        <tr class="filters">
          <th></th>
          <th></th>
          <th><input type="text" class="form-control" placeholder="Articulo" disabled></th>
          <th><input type="text" class="form-control" placeholder="Marca/Modelo" disabled></th>
          <th><input type="text" class="form-control" placeholder="Precio" disabled></th>
        </tr>
        </thead>
        <tbody style="text-align: center">
        <% @insts.each do |d| %>
            <tr>
              <td class="td-actions">
                <%if @cart.size == 0 %>
                    <%= button_to "Agregar", add_path(d.si_cod), :method => :get %>
              <%end%>
              </td>
              <td class="td-actions">
              </td>
              <td><%= Articulo.where(art_cod: d.art_cod).first.tipo_articulo.tipo_nom %> <%= Articulo.where(art_cod: d.art_cod).first.art_nom %> <%= Articulo.where(art_cod: d.art_cod).first.art_cod %> </td>
              <td><%= Marca.where(marca_cod: d.marca_cod).first.marca_nombre %> <%= Modelo.where(modelo_cod: d.modelo_cod).first.modelo_nombre %> <%= d.modelo_ano %></td>
              <td><%= number_to_currency(d.s_v_a_mo_pr + d.s_v_a_in_pr)%> </td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <hr>
</div>
<div>
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-1">
      <button type: "submit" class="btn btn-default" style="color:#FFFFFF; background-color:#5858FA;" onclick="location.href='/servs_inst/index';"><span class="glyphicon glyphicon-arrow-left"></span> Volver </button>
    </div>
  </div>
  <hr>
</div>
</body>