<% flash.each do |key, value| %>
    <p> <%= value %> </p>
<% end %>
<body>
<div class="container">
  <h1 style="color:#0B2161"><FONT FACE="times new roman">ADMINISTRAR MARCAS <small>   Editar, eliminar y crear marcas</small></FONT></h1>
  <hr>
  <div><button type: "submit" class="btn btn-default" style="color:#FFFFFF; background-color:#2DB171;" onclick="location.href='/marcas/new';"><span class="glyphicon glyphicon-plus"></span> Crear Nueva Marca</button>
    <hr>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="panel panel-primary filterable">
      <div class="panel-heading" style="min-height:40px;">
        <h3 class="panel-title pull-left">Marcas</h3>
        <div class="pull-right">
          <button href="javascript:;" class="btn btn-default btn-xs btn-filter"><span class="glyphicon glyphicon-filter"></span> Filtrar</button>
        </div>
      </div>
      <table class="table table-filterable" >
        <thead>
        <tr class="filters">
          <th></th>
          <th></th>
          <th><input type="text" class="form-control" placeholder="Marca" disabled></th>
        </tr>
        </thead>
        <tbody style="text-align: center">
        <% @marcas.each do |d| %>
            <tr>
              <td class="td-actions">
                <%= button_to "Editar", edit_marca_path(d), :method => :get %>
              </td>
              <td class="td-actions">
                <%= button_to "Borrar", elimMarca_path(d.marca_cod), :method => :post %>
              </td>
              <td><%= d.marca_nombre %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <hr>
</div>
<div>
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-1">
      <button type: "submit" class="btn btn-default" style="color:#FFFFFF; background-color:#5858FA;" onclick="location.href='/';"><span class="glyphicon glyphicon-arrow-left"></span> Volver </button>
    </div>
  </div>
  <hr>
</div>
</body>