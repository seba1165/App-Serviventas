<% flash.each do |key, value| %>
    <p> <%= value %> </p>
<% end %>
<body>
<div class="container">
  <h1 style="color:#0B2161"><FONT FACE="times new roman">ADMINISTRAR HERRAMIENTAS <small>   Editar, eliminar y crear herramientas</small></FONT></h1>
  <hr>
  <div>
	<button type: "submit" class="btn btn-default" style="color:#FFFFFF; background-color:#2DB171;" onclick="location.href='/herramientas/new';"><span class="glyphicon glyphicon-plus"></span> Crear Nueva Herramienta</button>
    <hr>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="panel panel-primary filterable">
      <div class="panel-heading" style="min-height:40px;">
        <h3 class="panel-title pull-left">Herramientas</h3>
        <div class="pull-right">
          <button href="javascript:;" class="btn btn-default btn-xs btn-filter"><span class="glyphicon glyphicon-filter"></span> Filtrar</button>
        </div>
      </div>
      <table class="table">
        <thead>
        <tr class="filters">
          <th></th>
          <th></th>
          <th><input type="text" class="form-control" placeholder="Codigo" disabled></th>
          <th><input type="text" class="form-control" placeholder="Tipo" disabled></th>
          <th><input type="text" class="form-control" placeholder="Nombre" disabled></th>
          <th><input type="text" class="form-control" placeholder="Stock" disabled></th>
          <th><input type="text" class="form-control" placeholder="Precio" disabled></th>
        </tr>
        </thead>
        <tbody style="text-align: center">
        <% @herramientas.each do |d| %>
            <tr>
              <td class="td-actions">
                <%= button_to "Editar", edit_herramienta_path(d), :method => :get %>
              </td>
              <td class="td-actions">
                <%= button_to "Borrar", elimHerr_path(d.art_cod), :method => :post %>
              </td>
              <td><%= d.art_cod %></td>
              <td><%= d.art_tipo_cod %></td>
              <td><%= d.art_nom %></td>
              <td><%= d.art_stock %></td>
              <td><%= d.art_precio %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <hr>
</div>
<div>
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-1">
      <button type: "submit" class="btn btn-default" style="color:#FFFFFF; background-color:#5858FA;" onclick="location.href='/articulos/index';"><span class="glyphicon glyphicon-arrow-left"></span> Volver </button>
    </div>
  </div>
  <hr>
</div>
</body>