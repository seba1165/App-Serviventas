    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <% if empleado_signed_in? %>
          Logueado como <strong><%= current_empleado.email %></strong>.
          <%= link_to 'Editar Perfil', edit_empleado_registration_path, :class => 'navbar-link' %> |
          <%= link_to "Cerrar Sesion", destroy_empleado_session_path, method: :delete, :class => 'navbar-link'  %>
      <% else %>
          <%= form_for(:empleado, :url => session_path(:empleado)) do |f| %>
              <%= f.text_field :email %>
              <%= f.password_field :password %>
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
              <%= f.submit 'Sign in' %>
              <%= link_to "Forgot your password?", new_password_path(:empleado) %>
          <% end %>
      <% end %>
